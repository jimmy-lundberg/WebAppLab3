@model IEnumerable<Stock>

<h2>@ViewBag.PortfolioName</h2>

<p>
    <a class="btn btn-primary" asp-action="BuyStock" asp-route-id="@ViewBag.PortfolioId">Buy stock</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                <label>Stocks</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="StockInfo" asp-route-id="@item.Id">Info</a> |
                    <a asp-action="SellStock" asp-route-id="@item.Id">Sell</a>
                </td>
            </tr>
        }
    </tbody>
</table>
