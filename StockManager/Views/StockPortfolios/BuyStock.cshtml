@model StockManager.Models.StockPortfolioViewModels.BuyStockViewModel

<h2>Buy Stock</h2>

<form asp-action="BuyStock">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="StockId" class="col-md-2 control-label">Select stock: </label>
            <div class="col-md-4">
                <select asp-for="StockId" asp-items="Model.StockList" class="form-control" id="selected-stock-to-buy"></select>
                <span asp-validation-for="StockId" class="text-danger"></span>
            </div>
            <label class="col-md-2 control-label">Buy price: </label>
            <div class="col-md-4">
                <input type="text" min="1" value="1" id="buy-price" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NumberOfShares" class="col-md-2 control-label">Number of shares: </label>
            <div class="col-md-4">
                <input asp-for="NumberOfShares" min="1" value="1" id="shares-to-buy" class="form-control" />
                <span asp-validation-for="NumberOfShares" class="text-danger"></span>
            </div>
            <label class="col-md-2 control-label">Total price: </label>
            <div class="col-md-3">
                <p id="total-buy-price" class="form-control">1 SEK</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>
            <a class="btn btn-default" asp-action="Content" asp-route-id=@ViewBag.PortfolioId>Go back</a>
        </div>
    </div>
</form>